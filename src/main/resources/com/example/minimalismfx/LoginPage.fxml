<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimalismfx.LoginPageController">
    <center>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <Label fx:id="loginLabel" text="Login" />
            <ComboBox fx:id="loginTypeComboBox" onAction="#setUpLoginTypeComboBox" prefWidth="150.0">
                <items>
                    <String>Shopper</String>
                    <String>Staff</String>
                </items>
            </ComboBox>
            <TextField fx:id="usernameField" onAction="#setUpUsernameField" prefHeight="26.0" prefWidth="354.0" promptText="Username" />
            <PasswordField fx:id="passwordField" onAction="#setUpPasswordField" promptText="Password" />
            <Button fx:id="loginButton" onAction="#setUpLoginButton" text="Login" />
        </VBox>
    </center>
</BorderPane>

